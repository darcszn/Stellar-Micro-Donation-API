{
  "name": "stellar-micro-donation-api",
  "version": "1.0.0",
  "description": "Micro-donation API using Stellar blockchain",
  "main": "src/routes/app.js",
  "scripts": {
    "start": "npm run validate-env && node src/routes/app.js",
    "validate-env": "node -e \"require('./src/config/envValidator').validateEnvironment()\"",
    "init-db": "node src/scripts/initDB.js",
    "migrate:memo": "node src/scripts/addMemoColumn.js",
    "test": "npm run validate-env && jest",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "test:memo": "node test-memo-feature.js",
    "test:rate-limit": "node test-rate-limit.js",
    "dev": "nodemon src/routes/app.js",
    "lint": "eslint .",
    "lint:security": "eslint . --ext .js --format stylish"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "sqlite3": "^5.1.7",
    "stellar-sdk": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-no-secrets": "^2.2.2",
    "eslint-plugin-security": "^4.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "sql.js": "^1.14.0",
    "supertest": "^6.3.3"
  }
}